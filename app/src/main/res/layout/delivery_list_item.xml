<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/clickView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/rqt_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/retrievalID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Retreival Id: " />

            <TextView
                android:id="@+id/rtvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/retrievalID"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="1" />

            <TextView
                android:id="@+id/dlvdate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/retrievalID"
                android:layout_marginBottom="20dp"
                android:layout_alignLeft="@id/retrievalID"
                android:layout_weight="1"
                android:text="Delivery Date: " />

            <TextView
                android:id="@+id/dlvdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dlvdate_title"
                android:layout_below="@id/rtvId"
                android:layout_weight="1"
                android:text="2020-08-08" />

            <TextView
                android:id="@+id/dept_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dlvdate_title"
                android:layout_alignLeft="@id/dlvdate_title"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="Department: " />

            <TextView
                android:id="@+id/deptName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dept_text"
                android:layout_below="@id/dlvdate"
                android:layout_weight="1"
                android:text="COMM" />

            <TextView
                android:id="@+id/cp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dept_text"
                android:layout_alignLeft="@id/dlvdate_title"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="Collection Point: " />

            <TextView
                android:id="@+id/cp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cp_text"
                android:layout_below="@id/deptName"
                android:layout_weight="1"
                android:text="No where" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
